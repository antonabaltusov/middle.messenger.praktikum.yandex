{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "typings/app.d.ts"],
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts"]
}
